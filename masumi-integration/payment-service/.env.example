# Server Configuration
PORT=4001
NODE_ENV=development

# Logging
LOG_LEVEL=info

# CORS Configuration
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:3001,http://localhost:3002,http://localhost:3003

# Cardano Blockchain Configuration
# Get your Blockfrost API key from: https://blockfrost.io/
# For preprod testnet: https://blockfrost.io/dashboard (select preprod)
# For mainnet: https://blockfrost.io/dashboard (select mainnet)
BLOCKFROST_API_KEY=preprodYourBlockfrostKeyHere

# Cardano Network Configuration
CARDANO_NETWORK=testnet
# CARDANO_NETWORK=mainnet  # For production

# Payment Configuration
MIN_CONFIRMATIONS=1
PAYMENT_CHECK_INTERVAL=20000

# Webhook Security
